<%- include ('partials/header.ejs') %>
<%- include ('partials/navbar.ejs') %>
<div class="container">
    <div class="card">
        <div class="card-header">
            <h1 class="d-flex justify-content-center">Editar cliente</h1>
        </div>
        <div class="card-body">
            <form action="/clientes/update" method="post">
                <input type="hidden" name="id" value="<%= cliente.id %>">
                <label>Nome do cliente:</label>
                <input class="form-control" type="text" name="nome" id="nome" value="<%= cliente.nome %>" required>

                <label>CPF do cliente:</label>
                <input class="form-control" type="text" name="cpf" id="cpf" value="<%= cliente.cpf %>" required>

                <label>Endere√ßo do cliente:</label>
                <input class="form-control" type="text" name="endereco" id="endereco" value="<%= cliente.endereco %>" required>
                <br>
                <input class="btn btn-success" type="submit" value="Alterar" onclick="return confirm('Deseja realmente alterar o cliente <%= cliente.nome %>?')">
            </form>
            <hr>
        </div>
    </div>
</div>
